<Project>
    <!-- Custom Variables -->
    <PropertyGroup>
<!--#if (GameDirectory != "") -->
        <GameDirectory>{GameDirectory}</GameDirectory>
<!--#endif -->
<!--#if (PluginsDirectory != "") -->
        <PluginsDirectory>{PluginsDirectory}</PluginsDirectory>
<!--#endif -->
    </PropertyGroup>
<!--#if (GameDirectory != "") -->

    <!-- Game Directories - Do Not Modify -->
    <PropertyGroup>
        <DataDirectory>$(GameDirectory)Content Warning_Data/</DataDirectory>
        <ManagedDirectory>$(DataDirectory)Managed/</ManagedDirectory>
    </PropertyGroup>
<!--#endif -->
<!--#if (PluginsDirectory != "") -->

    <!-- Copy to Plugin Directory for Quicker Testing -->
    <Target Name="CopyFiles" AfterTargets="PostBuildEvent">
        <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(PluginsDirectory)"/>
    </Target>
<!--#endif -->
</Project>
